    "simple-nunjucks-loader": "2.0.3",
    "speed-measure-webpack-plugin": "^1.5.0",
    "style-loader": "1.2.1",
    "vue": "2.6.11",
    "vue-loader": "15.9.3",
    "vue-template-compiler": "2.6.11",
    "webpack": "4.43.0",
    "webpack-cli": "3.3.12"
  },
  "lint-staged": {
    "src/**/*.{js,vue}": [
      "eslint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
