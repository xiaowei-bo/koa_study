{
    "apps": [
        {
            "name": "KOA_SERVER",
            "script": "app.js",
            "log_date_format": "YYYY-MM-DD HH:mm Z",
            "error_file": "log/koa-server.error.log",
            "out_file": "/dev/null",
            "min_uptime": "200s",
            "max_restarts": 10,
            "max_memory_restart": "100M",
            "cron_restart": "1 0 * * *",
            "watch": false,
            "merge_logs": true,
            "instances": 4,
            "exec_interpreter": "node",
            "exec_mode": "cluster",
            "autorestart": true,
            "vizion": false
        }
    ]
}